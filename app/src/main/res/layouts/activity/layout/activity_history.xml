<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.SettingsActivity">
    <!-- Toolbars Layout !-->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        app:elevation="0dp">
        <!-- Toolbar Main !-->
        <include
            layout="@layout/toolbar_settings" />
    </com.google.android.material.appbar.AppBarLayout>
    <!-- Action Toolbar !-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- Clear History Button !-->
        <Button
            android:id="@+id/deleteAllHistory"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/delete_all_history_text"
            android:textAllCaps="false"
            android:textColor="@color/primary"/>
    </LinearLayout>
    <!-- Content !-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">
        <!-- No History Layout !-->
        <LinearLayout
            android:id="@+id/noHistoryLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <!-- Image Layout !-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <!-- Image !-->
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="0.2"
                    app:srcCompat="@drawable/ic_baseline_history_24"/>
            </LinearLayout>
            <!-- Title !-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textAlignment="center"
                android:text="@string/no_history_text" />
        </LinearLayout>
        <!-- List View !-->
        <ListView
            android:id="@+id/historyListRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"/>
    </FrameLayout>
</LinearLayout>