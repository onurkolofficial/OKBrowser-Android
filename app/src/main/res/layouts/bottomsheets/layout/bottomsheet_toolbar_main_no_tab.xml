<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/popupMenuBackground"
    android:orientation="vertical">
    <!-- Menu Buttons Layout !-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- Grid Layout !-->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:columnCount="3">
            <!-- Bookmarks Layout Button !-->
            <LinearLayout
                android:id="@+id/bookmarksLayoutButton"
                android:layout_width="0dp"
                android:layout_height="74dp"
                android:layout_columnWeight="0.35"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center">
                <!-- Title !-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="2dp"
                    android:text="@string/bookmarks_text"
                    android:textAlignment="center"
                    android:textSize="13sp"
                    app:drawableTopCompat="@drawable/ic_icon_bookmark_circle" />
            </LinearLayout>
            <!-- History Layout Button !-->
            <LinearLayout
                android:id="@+id/historyLayoutButton"
                android:layout_width="0dp"
                android:layout_height="74dp"
                android:layout_columnWeight="0.35"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center">
                <!-- Title !-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="2dp"
                    android:text="@string/history_text"
                    android:textAlignment="center"
                    android:textSize="13sp"
                    app:drawableTopCompat="@drawable/ic_icon_history_circle" />
            </LinearLayout>
            <!-- Downloads Layout Button !-->
            <LinearLayout
                android:id="@+id/downloadsLayoutButton"
                android:layout_width="0dp"
                android:layout_height="74dp"
                android:layout_columnWeight="0.35"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center">
                <!-- Title !-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="2dp"
                    android:text="@string/downloads_text"
                    android:textAlignment="center"
                    android:textSize="13sp"
                    app:drawableTopCompat="@drawable/ic_icon_download_circle" />
            </LinearLayout>
            <!-- Settings Layout Button !-->
            <LinearLayout
                android:id="@+id/settingsLayoutButton"
                android:layout_width="0dp"
                android:layout_height="74dp"
                android:layout_columnWeight="0.35"
                android:layout_marginTop="10dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center">
                <!-- Title !-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="2dp"
                    android:text="@string/settings_text"
                    android:textAlignment="center"
                    android:textSize="13sp"
                    app:drawableTopCompat="@drawable/ic_icon_settings_circle" />
            </LinearLayout>
            <!-- Space for Empty Button !-->
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="0.35" />
            <!-- Exit Browser Layout Button !-->
            <LinearLayout
                android:id="@+id/exitBrowserLayoutButton"
                android:layout_width="0dp"
                android:layout_height="74dp"
                android:layout_columnWeight="0.35"
                android:layout_marginTop="10dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center">
                <!-- Title !-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="2dp"
                    android:text="@string/exit_browser_text"
                    android:textAlignment="center"
                    android:textSize="13sp"
                    app:drawableTopCompat="@drawable/ic_icon_close_circle" />
            </LinearLayout>
        </GridLayout>
    </RelativeLayout>
</LinearLayout>