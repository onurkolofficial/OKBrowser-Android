<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/popupMenuBackground"
    android:orientation="vertical">
    <!-- Image Url !-->
    <LinearLayout
        android:id="@+id/contextMenuShowUrlFullLayoutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/contextMenuShowUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_margin="10dp"
            android:text="Image URL" />
    </LinearLayout>
    <!-- Divider !-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />
    <!-- Menu Body !-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- Open Image Layout Button !-->
        <LinearLayout
            android:id="@+id/contextMenuOpenImageLayoutButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:clickable="true"
            android:focusable="true">
            <!-- Title !-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/open_image_text"
                android:textSize="16sp"
                app:drawableStartCompat="@drawable/ic_icon_arrow_right_circle" />
        </LinearLayout>
        <!-- Open Image With New Tab Layout Button !-->
        <LinearLayout
            android:id="@+id/contextMenuOpenImageNewTabLayoutButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:clickable="true"
            android:focusable="true">
            <!-- Title !-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/open_image_new_tab_text"
                android:textSize="16sp"
                app:drawableStartCompat="@drawable/ic_icon_add_circle" />
        </LinearLayout>
        <!-- Open Image With Incognito Tab Layout Button !-->
        <LinearLayout
            android:id="@+id/contextMenuOpenImageIncognitoTabLayoutButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:clickable="true"
            android:focusable="true">
            <!-- Title !-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/open_image_incognito_text"
                android:textSize="16sp"
                app:drawableStartCompat="@drawable/ic_icon_glasses_add_circle" />
        </LinearLayout>
        <!-- Download Image Layout Button !-->
        <LinearLayout
            android:id="@+id/contextMenuDownloadImageLayoutButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:clickable="true"
            android:focusable="true">
            <!-- Title !-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/download_image_text"
                android:textSize="16sp"
                app:drawableStartCompat="@drawable/ic_icon_download_circle" />
        </LinearLayout>
        <!-- Copy Link Layout Button !-->
        <LinearLayout
            android:id="@+id/contextMenuCopyImageURLButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:clickable="true"
            android:focusable="true">
            <!-- Title !-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/copy_link_text"
                android:textSize="16sp"
                app:drawableStartCompat="@drawable/ic_icon_copy_circle" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>