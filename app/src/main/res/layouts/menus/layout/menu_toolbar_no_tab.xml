<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/popupMenuBackground"
    android:orientation="vertical">
    <!-- Menu Buttons Layout !-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Buttons !-->
            <!-- Bookmarks Layout Button !-->
            <LinearLayout
                android:id="@+id/bookmarksLayoutButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:clickable="true"
                android:focusable="true">
                <!-- Title !-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/bookmarks_text"
                    android:textSize="15sp"
                    app:drawableStartCompat="@drawable/ic_icon_bookmark_circle" />
            </LinearLayout>
            <!-- History Layout Button !-->
            <LinearLayout
                android:id="@+id/historyLayoutButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:clickable="true"
                android:focusable="true">
                <!-- Title !-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/history_text"
                    android:textSize="15sp"
                    app:drawableStartCompat="@drawable/ic_icon_history_circle" />
            </LinearLayout>
            <!-- Downloads Layout Button !-->
            <LinearLayout
                android:id="@+id/downloadsLayoutButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:clickable="true"
                android:focusable="true">
                <!-- Title !-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/downloads_text"
                    android:textSize="15sp"
                    app:drawableStartCompat="@drawable/ic_icon_download_circle" />
            </LinearLayout>
            <!-- Settings Layout Button !-->
            <LinearLayout
                android:id="@+id/settingsLayoutButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:clickable="true"
                android:focusable="true">
                <!-- Title !-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/settings_text"
                    android:textSize="15sp"
                    app:drawableStartCompat="@drawable/ic_icon_settings_circle" />
            </LinearLayout>
            <!-- Exit Browser Layout Button !-->
            <LinearLayout
                android:id="@+id/exitBrowserLayoutButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:clickable="true"
                android:focusable="true">
                <!-- Title !-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/exit_browser_text"
                    android:textSize="15sp"
                    app:drawableStartCompat="@drawable/ic_icon_close_circle" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>