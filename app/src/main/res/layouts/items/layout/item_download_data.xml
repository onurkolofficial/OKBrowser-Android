<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">
    <!-- CardView !-->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <!-- Bookmark Layout Button !-->
        <LinearLayout
            android:id="@+id/openFileLayoutButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:orientation="horizontal">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:gravity="center"
                android:orientation="vertical">
                <!-- Page Title !-->
                <TextView
                    android:id="@+id/downloadFileNameText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:text="DOWNLOAD_FILE_NAME"/>
                <!-- Page Url !-->
                <TextView
                    android:id="@+id/downloadFolderText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textSize="12sp"
                    android:text="DOWNLOAD_FOLDER"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <!-- Delete Button !-->
            <ImageButton
                android:id="@+id/deleteDownloadFileButton"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="?attr/actionBarItemBackground"
                android:tooltipText="@string/delete_text"
                app:srcCompat="@drawable/ic_baseline_delete_24" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>