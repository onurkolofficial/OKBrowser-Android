<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:paddingStart="1dp"
    android:paddingEnd="1dp"
    android:orientation="vertical"
    android:foreground="@color/transparent">
    <!-- Open Collection Web CardView Button & Layout !-->
    <androidx.cardview.widget.CardView
        android:id="@+id/openWebCollectionButton"
        android:layout_width="match_parent"
        android:layout_height="148dp"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        android:clickable="true"
        android:focusable="true"
        app:cardUseCompatPadding="true">
        <!-- Tab Layout !-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!-- Title & Close Button Layout !-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal">
                <!-- Close Tab Button !-->
                <ImageButton
                    android:id="@+id/editWebCollectionButton"
                    android:layout_width="38dp"
                    android:layout_height="34dp"
                    android:layout_gravity="center_vertical"
                    android:background="?attr/actionBarItemBackground"
                    android:padding="9dp"
                    android:scaleType="fitCenter"
                    android:contentDescription="@string/edit_text"
                    android:tooltipText="@string/edit_text"
                    tools:targetApi="o"
                    app:srcCompat="@drawable/ic_icon_edit"/>
            </LinearLayout>
            <!-- Tab Preview Image Layout !-->
            <!-- Web Title !-->
            <TextView
                android:id="@+id/webCollectionTitlePreview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textSize="46sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:text="T" />
            <!-- Web Title !-->
            <TextView
                android:id="@+id/webCollectionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="WEB_TITLE" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>