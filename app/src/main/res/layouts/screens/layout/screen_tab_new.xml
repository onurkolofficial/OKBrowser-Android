<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical">
    <!-- Search Input Focus Button !-->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/focusSearchLayoutButton"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/item_border_radius"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="54dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:srcCompat="@drawable/app_logo_round" />
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_gravity="center"
            android:text="@string/search_or_url_text" />
    </androidx.appcompat.widget.LinearLayoutCompat>
    <!-- User Web Collection !-->
    <!-- User Web Collection Action Navigation !-->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
        <!-- Add Collection Web Layout Button !-->
        <LinearLayout
            android:id="@+id/newCollectionWebLayoutButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:clickable="true"
            android:focusable="true">
            <!-- Title !-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/add_page_text"
                android:textSize="15sp"
                app:drawableStartCompat="@drawable/ic_icon_add_circle" />
        </LinearLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <!-- User Web Collection Layout !-->
    <!-- LAYOUT Width calculated by 'item_web_collection_data.xml' !-->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="302dp"
        android:orientation="horizontal">
        <GridView
            android:id="@+id/webCollectionGridView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:scrollbars="horizontal"
            android:numColumns="3"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <!-- User Web Collection Grid View !-->

</LinearLayout>